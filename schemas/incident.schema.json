{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "incident_id": {
      "type": "string"
    },
    "_comment": {
      "type": "string"
    },
    "date_start": {
      "type": "string",
      "format": "date-time"
    },
    "date_end": {
      "type": "string",
      "format": "date-time"
    },
    "city": {
      "type": "string"
    },
    "province": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "unverified",
        "partially_verified",
        "verified",
        "disputed"
      ]
    },
    "evidence_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ratings": {
      "type": "object",
      "properties": {
        "veracity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "evidence_availability": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "incident_id",
    "date_start",
    "city",
    "title",
    "summary",
    "status",
    "evidence_ids"
  ],
  "additionalProperties": false
}