{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "incident_id": { "type": "string" },
    "date_start": { "type": "string", "format": "date-time" },
    "date_end": { "type": "string", "format": "date-time" },
    "city": { "type": "string" },
    "province": { "type": "string" },
    "summary": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["unverified", "partially_verified", "verified", "disputed"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "evidence_ids": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [
    "incident_id",
    "date_start",
    "city",
    "summary",
    "status",
    "tags",
    "evidence_ids"
  ],
  "additionalProperties": false
}
